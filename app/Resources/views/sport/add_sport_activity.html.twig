{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">

            <form method="post" action="{{ path('add_sport_activity') }}">

                <div>
                    <select name="activity-type" class="form-control" id="activity-type">
                        <option></option>
                        {% for activityType in activityTypes %}
                            <option>{{ activityType.note }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <select name="activity-day" class="form-control" id="activity-type">
                        <option>{{ defaultDate }}</option>
                        {% for day in days %}
                            <option>{{ day.date.format('d-m-Y') }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <div class="col-sm-10">
                        <input name="reps" type="text" class="form-control" id="reps" placeholder="Reps">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-10">
                        <input name="sets" type="text" class="form-control" id="sets" placeholder="Sets">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-10">
                        <input name="weight" type="text" class="form-control" id="weight" placeholder="Weight">
                    </div>
                </div>

                <button name="add-sport-activity-submit" type="submit" class="btn btn-default">Submit</button>
            </form>
            <br>
            <div><a href="{{ path('homepage') }}">Back</a></div>

        </div>
    </div>
{% endblock %}

